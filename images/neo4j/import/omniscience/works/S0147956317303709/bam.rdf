      <dct:title>Prognostic significance of late gadolinium enhancement on cardiac magnetic resonance in patients with hypertrophic cardiomyopathy</dct:title>
      <dct:isPartOf rdf:resource="http://vtw.elsevier.com/content/pii/S0147956318X00028"/>
